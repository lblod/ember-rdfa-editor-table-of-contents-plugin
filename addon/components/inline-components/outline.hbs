<AuList @divider={{true}} class='table-of-contents'>
  {{#each @entries as |outlineEntry|}}
    <AuList::Item>
      <AuButton @skin='link-secondary' onclick={{fn @onEntryClick outlineEntry.node}}>
        {{outlineEntry.content}}

      </AuButton>
      {{#if outlineEntry.children}}
        <InlineComponents::Outline
          @entries={{outlineEntry.children}}
          @onEntryClick={{@onEntryClick}}
        />
      {{/if}}
    </AuList::Item>
  {{/each}}
</AuList>
